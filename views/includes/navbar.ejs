<!-- Custom CSS -->
<style>
.nav-pills .nav-link {
  color: #6b7280;
  border-radius: 0;
  padding-bottom: 8px;
  border-bottom: 2px solid transparent;
}
.nav-pills .nav-link.active {
  color: #2563eb;
  background-color: transparent;
  border-bottom: 2px solid #2563eb;
}
.nav-pills .nav-link:hover {
  color: #2563eb;
}
</style>

<!-- JavaScript for dynamic progress -->
<script>
document.addEventListener("DOMContentLoaded", function() {
  const links = document.querySelectorAll('#setupNav .nav-link');
  const currentPath = window.location.pathname;

  let activeStep = 1; // default step

  links.forEach(link => {
    // Remove any existing active classes
    link.classList.remove('active');

    // If link matches current page, mark it as active
    if (link.getAttribute('href') === currentPath) {
      link.classList.add('active');
      activeStep = parseInt(link.getAttribute('data-step'));
    }
  });

  // Update progress bar based on active link
  const totalSteps = links.length;
  const progress = (activeStep / totalSteps) * 100;
  document.getElementById('progressBar').style.width = progress + '%';
});
</script>
