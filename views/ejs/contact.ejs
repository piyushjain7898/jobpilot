<% layout("layouts/boilerplate") %>

<body>
  <div class="container mt-4">
    <form action="/contact" method="post" class="col-7 offset-2">

      <h4 class="mb-4">Contact Details</h4>

      <!-- Map Location -->
      <div class="mb-3">
        <input type="text" name="map_location" class="form-control" placeholder="Map Location" required>
      </div>

      <!-- Phone Number -->
      <div class="input-group mb-3">
        <span class="input-group-text bg-white">
          <img src="https://flagcdn.com/w20/bd.png" alt="Bangladesh Flag">
        </span>
        <span class="input-group-text">+880</span>
        <input type="text" name="phone_number" class="form-control" placeholder="Phone number.." required>
      </div>

      <!-- Email -->
      <div class="input-group mb-4">
        <span class="input-group-text bg-white">
          <i class="bi bi-envelope"></i>
        </span>
        <input type="email" name="email" class="form-control" placeholder="Email address" required>
      </div>

      <!-- Buttons -->
      <div class="d-flex justify-content-left">
        <a href="/socials" class="btn btn-secondary">Previous</a> &nbsp; &nbsp;
        <button type="submit" class="btn btn-primary">Finish Editing</button>
      </div>

    </form>
  </div>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</body>
