<%layout("layouts/boilerplate") %>

    <body>
        
        <div class="row">
            <form action="/company" method="post" class="col-8 offset-2">

                <div class="upload-container">
                    <!-- Logo -->
                    <div>
                        <div class="upload-label">Upload Logo</div>
                        <label class="upload-box">
                            <div class="upload-icon">☁️</div>
                            <div class="upload-title">Browse photo</div>
                            <div class="upload-subtext">A photo larger than 400px works best. Max size 5MB.</div>
                            <input type="text" name="company_logo" required>
                        </label>
                        
                    </div>

                    <!-- Banner -->
                    <div>
                        <div class="upload-label">Banner Image</div>
                        <label class="upload-box secondUpload-box">
                            <div class="upload-icon">⬆️</div>
                            <div class="upload-title">Browse photo</div>
                            <div class="upload-subtext">Optimum size 1520×400. JPEG or PNG. Max 5MB.</div>
                            <input type="text" name="banner_image" required>
                        </label>
                        
                    </div>
                </div>
                <!-- Company Name -->
                <div class="mb-3">
                    <label class="form-label">Company Name</label>
                    <input type="text" class="form-control" name="company_name" placeholder="Enter company name" required>
                </div>

                <!-- About Us -->
                <div class="mb-3">
                    <label class="form-label">About Us</label>
                    <textarea class="form-control" name="about_us" placeholder="Write down about your company here. Let the candidate know who we are..." required></textarea>
                </div>

                <button class="btn btn-success">Save & Next</button>
            </form>
        </div>
    </body>